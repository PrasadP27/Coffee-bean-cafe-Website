    </div>
</section>

<section id="didYouKnow">
    <h1 class="heading"> did you know? <span>about our restaurant</span> </h1>

    <div class="dYK-container">
        <div class="dYK-content">
            <a href="#menu">
                <img src="assets/images/dYK-img1.svg" alt="">
                <h3>famous for our coffee</h3>
            </a>
        </div>
        <div class="dYK-content">
            <a href="booking">
                <img src="assets/images/dYK-img2.svg" alt="">
                <h3>Online table booking</h3>
            </a>
        </div>
        <div class="dYK-content">
            <a href="booking">
                <img src="assets/images/dYK-img3.svg" alt="">
                <h3>open everyday 10am - 10pm</h3>
            </a>
        </div>
        <div class="dYK-content">
            <a href="location">
                <img src="assets/images/dYK-img4.svg" alt="">
                <h3>Bandra, Opposite Mount Carmel Church</h3>
            </a>
        </div>
    </div>
</section>

<section id="menu">
    <img src="assets/images/menu-bg.svg" alt="coffee" class="bg-img">

    <h1 class="heading">Our menu<span>popular items</span> </h1>

    <div class="menu-container">

        {{#each menuItems}}
        <div class="menu-content">
            <img src="assets/images/{{image}}.svg" alt="{{image}}">
            <div class="info">
                <h3>{{title}}</h3>
                <p>{{description}}</p>
            </div>
            <h3 class="price-tag">â‚¹{{price}}</h3>
        </div>
        {{/each}}

    </div>

    <a href="menu" class="btn">Full-Menu</a>

</section>

<section id="review">

    <img src="assets/images/review-bg.webp" alt="review-bg" class="review-bg">

    <h1 class="heading">review <span>what people say</span></h1>

    <div class="swiper mySwiper">
        <div class="swiper-wrapper">

            {{#each reviewData}}
            <div class="swiper-slide">
                <img src="assets/icons/quote-left.svg" alt="" class="quoteLeft">
                <div class="review-content">
                    <h2>{{reviewName}}</h2>
                    <img src="assets/images/{{reviewImg}}.webp" alt="{{review-img}}">
                    <div class="stars">
                        <img src="assets/icons/{{star1}}-star.svg" alt="{{star1}}-star">
                        <img src="assets/icons/{{star2}}-star.svg" alt="{{star2}}-star">
                        <img src="assets/icons/{{star3}}-star.svg" alt="{{star3}}-star">
                        <img src="assets/icons/{{star4}}-star.svg" alt="{{star4}}-star">
                        <img src="assets/icons/{{star5}}-star.svg" alt="{{star5}}-star">
                    </div>
                    <p>{{review}}</p>
                </div>
                <img src="assets/icons/quote-right.svg" alt="" class="quoteRight">
            </div>
            {{/each}}

        </div>
    </div>

</section>

<section id="follow">
    <div class="follow-container">
        <div class="follow-content">
            <h1 class="heading">Follow us on</h1>
            <h1 class="insta">Instagram</h1>
            <a href="https://www.instagram.com/" target="_blank" rel="noopener noreferrer" class="btn">Follow Us</a>
        </div>
        <div class="follow-img">
            <img src="assets/images/follow-img1.webp" alt="img1" loading="lazy">
            <img src="assets/images/follow-img2.webp" alt="img2" loading="lazy">
            <img src="assets/images/follow-img3.webp" alt="img3" loading="lazy">
            <img src="assets/images/follow-img4.webp" alt="img4" loading="lazy">
            <img src="assets/images/follow-img5.webp" alt="img5" loading="lazy">
            <img src="assets/images/follow-img6.webp" alt="img6" loading="lazy">
        </div>
    </div>
</section>